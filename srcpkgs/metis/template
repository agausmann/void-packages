checksum=76faebe03f6c963127dbb73c13eab58c9a3faeae48779f049066a21c087c5db2

metis-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
	}
}
