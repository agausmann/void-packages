case "$XBPS_TARGET_MACHINE" in
	aarch64*) ;;
	x86_64*) ;;
# `make check` expects access to a compiler that targets aarch64,
# x86_64, or riscv64.
	*) make_check=no ;;
esac

post_install() {
	vlicense LICENSE
}
