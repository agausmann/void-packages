OpenXR-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/pkgconfig
		#vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
